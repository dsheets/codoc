<!-- Used for every doc and index page -->
<t:let name="page">
  <html>
    <head>
      <meta charset="utf-8" />
      <link rel="stylesheet" type="text/css">
      <t:attr name="href"><t:insert name="css"/></t:attr></link>
      <title><t:insert name="title"/></title>
    </head>
    <body>
      <t:insert name="body"/>
    </body>
  </html>
</t:let>
